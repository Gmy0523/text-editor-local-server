{
    "compilerOptions": {
        "target": "ES2020", // 编译后的JS版本（兼容Node.js v14+）
        "module": "NodeNext", // 模块系统（Node.js默认使用CommonJS）
        "moduleResolution": "NodeNext",
        "outDir": "./dist", // 编译后的JS文件输出目录
        "rootDir": "./src", // TS源代码目录（我们的代码放在src下）
        "strict": true, // 开启严格模式（强类型检查，推荐）
        "esModuleInterop": true, // 允许ES模块和CommonJS模块互操作
        "skipLibCheck": true, // 跳过库文件的类型检查（加速编译）
        "forceConsistentCasingInFileNames": true // 强制文件名大小写一致
    },
    "include": [
        "src/**/*"
    ], // 需要编译的TS文件（src下所有文件）
    "exclude": [
        "node_modules"
    ] // 排除node_modules
}